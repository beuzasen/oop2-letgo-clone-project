                </Frame>
                <Frame Grid.Row="3" Grid.Column="0" CornerRadius="15" 
              Padding="0"
                IsClippedToBounds="True">
                    <Image  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Source="kasa.jpg" Aspect="AspectFill"/>

                </Frame>
                <Frame  Grid.Row="3" Grid.Column="1" CornerRadius="15" 
              Padding="0"
                IsClippedToBounds="True">
                    <Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Source="araba.jpg" Aspect="AspectFill"/>

                </Frame>
                <Frame  Grid.Row="4" Grid.Column="0" CornerRadius="15" 
